<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:background="#eff2ff">

        <TextView
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/up"
            android:gravity="center_vertical|left"
            android:paddingLeft="8dp"
            android:text="/"
            android:textColor="@color/text_colot_1"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/up"
            android:background="@drawable/btn_seletor"
            android:src="@drawable/ic_arrow_up_black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ListView
        android:fadingEdge="none"
        android:fadingEdgeLength="0px"
        android:overScrollMode="never"
        android:id="@+id/listView"
        tools:listitem = "@layout/item_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </ListView>

</LinearLayout><!-- From: file:/E:/bysj/WifiProject-AS/WifiProject/app/src/main/res/layout/vu_file.xml -->