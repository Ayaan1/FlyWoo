<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="92dp">

    <RelativeLayout
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:minHeight="92dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/pic_loading"
            fresco:placeholderImageScaleType="centerCrop"/>

        <TextView
            android:id="@+id/pictureCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/folderName"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/image"
            android:text="(0)"
            android:textColor="@color/text_colot_2"
            android:textSize="12sp"/>

        <com.zjk.wifiproject.view.TouchCheckBox
            android:id="@+id/select"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/image"
            android:maxEms="20"
            android:singleLine="true"
            android:text="DownLoad"
            android:textColor="@color/text_colot_1"
            android:textSize="16sp"/>

    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout><!-- From: file:/E:/bysj/WifiProject-AS/WifiProject/app/src/main/res/layout/item_picture_folder.xml -->