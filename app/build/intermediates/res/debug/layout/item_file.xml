<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="92dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/btn_seletor"
        android:descendantFocusability="blocksDescendants"
        android:padding="16dp">

        <ImageView
            android:id="@+id/fileIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/isSelect"
            android:layout_toRightOf="@+id/fileIcon"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/text_colot_1"
            android:textSize="18sp"
            tools:text="android"/>

        <TextView
            android:id="@+id/timeSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fileIcon"
            android:layout_toRightOf="@+id/fileIcon"
            android:textColor="@color/text_colot_2"
            android:textSize="14sp"
            tools:text="timeAndSize"/>

        <com.zjk.wifiproject.view.TouchCheckBox
            android:id="@+id/isSelect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:gravity="center"
            android:padding="10dp"/>

    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout><!-- From: file:/E:/bysj/WifiProject-AS/WifiProject/app/src/main/res/layout/item_file.xml -->