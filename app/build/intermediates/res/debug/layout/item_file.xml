<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="92dp"
    android:background="@drawable/btn_seletor"
    android:layout_height="92dp">
    <ImageView
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/fileIcon"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="android"
        android:id="@+id/fileName"
        android:textSize="18sp"
        android:textColor="@color/text_colot_1"
        android:layout_toLeftOf="@+id/isSelect"
        android:layout_marginRight="4dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_toRightOf="@+id/fileIcon"/>
    <TextView
        android:layout_alignBottom="@+id/fileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeSize"
        tools:text="timeAndSize"
        android:textSize="14sp"
        android:textColor="@color/text_colot_2"
        android:layout_toRightOf="@+id/fileIcon"/>

    <CheckBox
        android:id="@+id/isSelect"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout><!-- From: file:/E:/bysj/WifiProject-AS/WifiProject/app/src/main/res/layout/item_file.xml -->