    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" >

        <com.zjk.wifiproject.view.CircularProgress
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
